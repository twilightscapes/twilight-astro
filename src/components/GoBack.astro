---
import { getEntry } from 'astro:content';
const language = await getEntry('language', 'index');

---

<script>
  const goBackButton = document.getElementById('gobacker');
  if (goBackButton) {
    goBackButton.addEventListener('click', () => {
      history.back();
    });

    // Check if we can go back
    if (window.history.length > 1) {
      goBackButton.style.display = 'inline-flex';
    } else {
      goBackButton.style.display = 'none';
    }
  }
</script>
</script>

<button
  id="gobacker"
  class="flex w-10 h-10 p4 items-center justify-center rounded-md ring-zinc-400 hover:ring-2 transition-all"
  style="display: none; bottom:0; flex-direction: column;"
>
    <svg class="w-8 h-8" aria-label="Go Back" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M20 10v4h-9l3.5 3.5l-2.42 2.42L4.16 12l7.92-7.92L14.5 6.5L11 10z"/></svg>
  
<span class="--theme-header" style="font-size:10px; font-weight: bold;">{language.data.goback}</span>
</button>


