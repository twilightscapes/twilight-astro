  <script>
    (function(){
      const text = '#VideoPrivacy';
      const hashtagEl = document.getElementById('bluesky-hashtag');
      const btn = document.getElementById('copy-hashtag-btn');
      const feedback = document.getElementById('bluesky-copy-feedback');

      function showFeedback() {
        if (!feedback) return;
        feedback.style.opacity = '1';
        setTimeout(() => { feedback.style.opacity = '0'; }, 1400);
      }

      async function doCopy() {
        try {
          if (navigator.clipboard && navigator.clipboard.writeText) {
            await navigator.clipboard.writeText(text);
          } else {
            const input = document.createElement('input');
            input.value = text;
            document.body.appendChild(input);
            input.select();
            document.execCommand('copy');
            input.remove();
          }
          showFeedback();
        } catch (e) {
          // silent fallback
          showFeedback();
        }
      }

