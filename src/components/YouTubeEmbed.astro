<script>
// Initialize SVGator controller globally
import svgatorController from '../utils/svgator';
if (typeof window !== 'undefined') {
  (window as any).SVGatorController = svgatorController;
}
</script>

<script>
document.addEventListener('DOMContentLoaded', () => {
  // Only apply VideoPreferences to auto-load videos, not click-to-load
  // Click-to-load videos will use their individual mute settings when loaded
  const preferences = (window as any).VideoPreferences?.getPreferences() || { muted: false };
  
  // Only update auto-load iframes (those already in the DOM)
  document.querySelectorAll('iframe[id^="youtube-iframe-"]').forEach((iframe) => {
    const htmlIframe = iframe as HTMLIFrameElement;
    if (htmlIframe.src && htmlIframe.src.includes('youtube')) {
      (window as any).VideoPreferences?.updateAllVideoMuteStates(preferences.muted);
    }
  });
  
  // Set up mute toggle buttons
  document.querySelectorAll('.mute-toggle-btn').forEach((element) => {
    const btn = element as HTMLButtonElement;
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      
      const currentlyMuted = (window as any).VideoPreferences?.isMuted() || false;
      (window as any).VideoPreferences?.setMuted(!currentlyMuted);
    });
  });
});
</script>

<script define:vars={{ videoId, playerVars, start, end, loop, videoTimeLimitMinutes, isContentBlockVideo, isTimerDisabled, autoplay, mute, clickToLoad, svgatorSync, svgatorId, interactiveMode }}>
  console.log('üé¨ Script running for videoId:', videoId, 'clickToLoad:', clickToLoad, 'svgatorSync:', svgatorSync);
  
  // Helper function to update mute button visual state
  function updateMuteButtonState(button, isMuted) {
    const muteIcon = button.querySelector('.mute-icon');
    const unmuteIcon = button.querySelector('.unmute-icon');
    
    if (isMuted) {
      muteIcon.style.display = 'none';
      unmuteIcon.style.display = 'block';
      button.setAttribute('aria-label', 'Unmute video');
    } else {
      muteIcon.style.display = 'block';
      unmuteIcon.style.display = 'none';
      button.setAttribute('aria-label', 'Mute video');
    }
  }
  
  // Helper function to set up mute toggle functionality
  function setupMuteToggle(button, iframe, initialMuteState) {
    let isMuted = initialMuteState;
    
    button.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      
      isMuted = !isMuted;
      
      // Send command to YouTube iframe via postMessage
      const command = isMuted ? 'mute' : 'unMute';
      iframe.contentWindow.postMessage(JSON.stringify({
        event: 'command',
        func: command
      }), '*');
      
      // Also unmute secondary video if this is the primary player
      if (iframe.id === 'primary-player-iframe') {
        const secondaryIframe = document.getElementById('secondary-player-iframe');
        if (secondaryIframe) {
          secondaryIframe.contentWindow.postMessage(JSON.stringify({
            event: 'command',
            func: command
          }), '*');
        }
      }
      
      updateMuteButtonState(button, isMuted);
    });
  }
  
  // Click-to-load functionality for privacy (only when clickToLoad is true)
  function setupClickToLoad() {
    console.log('üé¨ setupClickToLoad called, clickToLoad:', clickToLoad);
    if (!clickToLoad) return; // Only run for click-to-load videos
    
    const clickToLoadContainer = document.querySelector(`.click-to-load[data-video-id="${videoId}"]`);
    console.log('üé¨ Found clickToLoadContainer:', !!clickToLoadContainer);
    if (!clickToLoadContainer) return;

    const iframeContainer = clickToLoadContainer.querySelector('.iframe-container');
    const thumbnail = clickToLoadContainer.querySelector('img');
    const clickOverlay = clickToLoadContainer.querySelector('.video-click-overlay');
    let currentIframe = null;
    let isVideoLoaded = false;
    let isPlaying = false;
    let shouldUnmuteOnLoad = !mute; // Remember if we should unmute based on post settings

    function toggleVideo() {
      console.log('üé¨ toggleVideo called, isVideoLoaded:', isVideoLoaded, 'isPlaying:', isPlaying);
      const overlayScreen = clickToLoadContainer.querySelector('.video-overlay-screen');
      const playIcon = overlayScreen?.querySelector('.play-icon');
      const pauseIcon = overlayScreen?.querySelector('.pause-icon');
      
      if (!isVideoLoaded) {
        // First click - load and play video
        console.log('üé¨ Loading video for first time...');
        loadVideo();
        isVideoLoaded = true;
        isPlaying = true;
        // Show click overlay
        if (clickOverlay) clickOverlay.style.display = 'block';
        return;
      }
      
      // Video is loaded - toggle play/pause
      if (currentIframe) {
        if (isPlaying) {
          // Pause the video
          currentIframe.contentWindow?.postMessage(JSON.stringify({
            event: 'command',
            func: 'pauseVideo'
          }), '*');
          
          // Pause secondary video if it exists
          const secondaryIframe = /** @type {HTMLIFrameElement | null} */ (document.getElementById('secondary-player-iframe'));
          if (secondaryIframe) {
            secondaryIframe.contentWindow?.postMessage(JSON.stringify({
              event: 'command',
              func: 'pauseVideo'
            }), '*');
          }
          
          // Show overlay with play icon (above SVG)
          if (overlayScreen) {
            overlayScreen.style.display = 'flex';
            overlayScreen.style.background = '#000'; // Solid black when paused
            overlayScreen.style.zIndex = '70'; // Above SVG layer
          }
          if (playIcon) playIcon.style.display = 'block';
          if (pauseIcon) pauseIcon.style.display = 'none';
          
          // Pause SVGator animation if present
          if (svgatorSync && (svgatorId || videoId)) {
            const controller = window.SVGatorController;
            if (controller) {
              controller.pause(svgatorId || `svgator-${videoId}`);
              console.log('‚è∏ SVGator paused');
            }
          }
          
          
          // Hide click overlay when paused
          if (clickOverlay) clickOverlay.style.display = 'none';
          
          isPlaying = false;
        } else {
          // Play the video
          currentIframe.contentWindow?.postMessage(JSON.stringify({
            event: 'command',
            func: 'playVideo'
          }), '*');
          
          // Play secondary video if it exists
          const secondaryIframe = /** @type {HTMLIFrameElement | null} */ (document.getElementById('secondary-player-iframe'));
          if (secondaryIframe) {
            secondaryIframe.contentWindow?.postMessage(JSON.stringify({
              event: 'command',
              func: 'playVideo'
            }), '*');
          }
          
          // Hide overlay
          if (overlayScreen) overlayScreen.style.display = 'none';
          
          // Resume SVGator animation if present
          if (svgatorSync && (svgatorId || videoId)) {
            const controller = window.SVGatorController;
            if (controller) {
              controller.play(svgatorId || `svgator-${videoId}`);
              console.log('‚ñ∂Ô∏è SVGator playing');
            }
          }
          
          // Show click overlay when playing
          if (clickOverlay) clickOverlay.style.display = 'block';
          
          isPlaying = true;
        }
      }
    }

    function loadVideo() {
      // For click-to-load videos, ALWAYS start muted to avoid mobile autoplay restrictions
      // We'll unmute via API calls after the iframe loads if needed
      const shouldStartMuted = true; // Always start muted for click-to-load
      console.log('üé¨ loadVideo - mute prop:', mute, 'shouldStartMuted:', shouldStartMuted, 'shouldUnmuteOnLoad:', shouldUnmuteOnLoad);
      
      // Hide overlay screen (video is playing)
      const overlayScreen = clickToLoadContainer.querySelector('.video-overlay-screen');
      if (overlayScreen) overlayScreen.style.display = 'none';
      if (thumbnail) thumbnail.style.display = 'none';
      
      // Start SVGator animation if present
      if (svgatorSync && (svgatorId || videoId)) {
        setTimeout(() => {
          const controller = window.SVGatorController;
          if (controller) {
            controller.play(svgatorId || `svgator-${videoId}`);
            console.log('‚ñ∂Ô∏è SVGator started with video');
          }
        }, 500); // Small delay to ensure SVGator is initialized
      }
      
      // Show overlay wrapper (image/SVG overlays)
      const overlayWrapper = clickToLoadContainer.querySelector('.overlay-wrapper');
      if (overlayWrapper) overlayWrapper.style.display = 'block';
      
      // Show click overlay so video can be paused
      if (clickOverlay) clickOverlay.style.display = 'block';
      
      // Show mute toggle button if enabled
      const muteToggle = clickToLoadContainer.querySelector('.overlay-mute-toggle');
      if (muteToggle) {
        muteToggle.style.display = 'flex';
        updateMuteButtonState(muteToggle, !shouldUnmuteOnLoad); // Show correct initial state
      }
      
      // Show iframe container
      if (iframeContainer) {
        iframeContainer.style.display = 'block';
        
        // Create and insert iframe
        const iframe = document.createElement('iframe');
        const iframeId = clickToLoadContainer.id ? `${clickToLoadContainer.id}-iframe` : `youtube-iframe-${videoId}`;
        iframe.id = iframeId;
        iframe.width = '100%';
        iframe.height = '100%';
        
        // ALWAYS start muted for click-to-load (mobile autoplay policy requirement)
        // We'll unmute immediately if needed via postMessage (still synchronous with click)
        let iframeSrc = `https://www.youtube-nocookie.com/embed/${videoId}?autoplay=1&mute=1&controls=1&enablejsapi=1`;
        console.log('üé¨ Building iframe URL - shouldUnmuteOnLoad:', shouldUnmuteOnLoad);
        // Add start and end parameters - YouTube will stop at end, then we restart
        if (start && start > 0) iframeSrc += `&start=${start}`;
        if (end && end > 0) iframeSrc += `&end=${end}`;
        // Only add native loop if we don't have custom start/end times
        if (loop && !start && !end) iframeSrc += `&loop=1&playlist=${videoId}`;
        iframeSrc += `&rel=0`;
        
        iframe.src = iframeSrc;
        iframe.title = 'YouTube Video';
        iframe.frameBorder = '0';
        iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share';
        iframe.allowFullscreen = true;
        iframe.referrerPolicy = 'strict-origin-when-cross-origin';
        iframe.style.cssText = 'aspect-ratio: 16/9; width: 100%; height: 100%;';
        
        iframeContainer.appendChild(iframe);
        currentIframe = iframe;
        
        // If video should be unmuted, send unmute command IMMEDIATELY (synchronous with click)
        if (shouldUnmuteOnLoad) {
          console.log('üîä Unmuting video IMMEDIATELY (synchronous with user click)');
          
          const unmuteCommand = JSON.stringify({ event: 'command', func: 'unMute' });
          
          // Send unmute command immediately - even if contentWindow is null, keep trying
          iframe.contentWindow?.postMessage(unmuteCommand, '*');
          
          // Also try a few more times quickly (still within same event loop context)
          for (let i = 0; i < 10; i++) {
            setTimeout(() => {
              iframe.contentWindow?.postMessage(unmuteCommand, '*');
            }, i * 100); // Every 100ms for 1 second
          }
          
          // Also send on load event as backup
          iframe.addEventListener('load', () => {
            iframe.contentWindow?.postMessage(unmuteCommand, '*');
            setTimeout(() => iframe.contentWindow?.postMessage(unmuteCommand, '*'), 250);
            setTimeout(() => iframe.contentWindow?.postMessage(unmuteCommand, '*'), 500);
            console.log('üîä Unmute commands sent after iframe load');
          });
        }
        
        // Listen for player state changes
        window.addEventListener('message', (event) => {
          if (event.origin !== 'https://www.youtube.com' && event.origin !== 'https://www.youtube-nocookie.com') {
            return;
          }
          
          try {
            const data = typeof event.data === 'string' ? JSON.parse(event.data) : event.data;
            
            if (event.source === iframe.contentWindow && data.event === 'infoDelivery' && data.info && 'playerState' in data.info) {
              const state = data.info.playerState;
              const overlayScreen = clickToLoadContainer.querySelector('.video-overlay-screen');
              
              // 1 = playing, 2 = paused, 0 = ended
              if (state === 1) {
                isPlaying = true;
                if (overlayScreen) overlayScreen.style.display = 'none';
              } else if (state === 2 || state === 0) {
                isPlaying = false;
              }
            }
          } catch (e) {
            // Ignore parsing errors
          }
        });
        
        // Enable listening to player state
        iframe.contentWindow?.postMessage('{"event":"listening"}', '*');
        
        // If this is the primary player, trigger secondary player too
        if (clickToLoadContainer.id === 'primary-player') {
          setTimeout(() => {
            const secondaryIframe = /** @type {HTMLIFrameElement | null} */ (document.getElementById('secondary-player-iframe'));
            if (secondaryIframe) {
              console.log('‚ñ∂Ô∏è Primary video started - starting secondary video');
              secondaryIframe.contentWindow?.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
            }
          }, 1000);
        }
        
        // Set up mute toggle functionality
        // DISABLED: Mute button now acts as play/pause control (see global script section)
        // if (muteToggle) {
        //   setupMuteToggle(muteToggle, iframe, shouldMute);
        // }
        
        // Set up simple loop checking for iframe with start/end times
        if (loop && end && end > 0) {
          setupSimpleIframeLoop(iframe);
        }
        
        // Start timer after iframe loads if needed
        setupSimpleIframeTimer();
      }
    }

    // Add click handlers to overlay screen
    const overlayScreen = clickToLoadContainer.querySelector('.video-overlay-screen');
    if (overlayScreen) {
      console.log('üé¨ Setting up click handler for overlay screen');
      overlayScreen.addEventListener('click', (e) => {
        console.log('üé¨ Overlay screen clicked!', e.target);
        toggleVideo();
      });
    } else {
      console.warn('üé¨ No overlay screen found!');
    }
    
    // Add click handler to the transparent overlay (for pausing while playing)
    if (clickOverlay) {
      clickOverlay.addEventListener('click', toggleVideo);
    }
    
    // Also allow clicking thumbnail directly
    if (thumbnail) {
      thumbnail.addEventListener('click', (e) => {
        if (e.target === thumbnail) {
          toggleVideo();
        }
      });
    }
  }

  // SVGator Integration
  async function setupSVGatorSync() {
    if (!svgatorSync) return;
    
    const svgElement = document.getElementById(svgatorId || `svgator-${videoId}`);
    if (!svgElement) {
      console.warn('SVGator element not found:', svgatorId || `svgator-${videoId}`);
      return;
