---
import { getEntry } from 'astro:content';
import svgatorController from '../utils/svgator';

const language = await getEntry('language', 'index');

// Get site settings for video time limit
const siteSettings = await getEntry('siteSettings', 'main');
const videoTimeLimitMinutes = siteSettings?.data?.videoTimeLimitMinutes ?? 1;


interface Props {
  id?: string; // Unique identifier for player synchronization
  url: string;
  title?: string;
  controls?: boolean;
  mute?: boolean;
  loop?: boolean;
  start?: number;
  end?: number;
  useCustomPlayer?: boolean;
  autoplay?: boolean;
  clickToLoad?: boolean; // If true, shows click-to-load instead of auto-loading iframe
  showMuteButton?: boolean; // If true, shows the mute/play button
  'data-preserve-settings'?: string;
  overlayImage?: string;
  overlayImageAlt?: string;
  overlaySvg?: string;
  overlaySvgAlt?: string;
  svgatorSync?: boolean; // If true, syncs SVGator animation with video playback
  svgatorId?: string; // Unique ID for the SVGator instance
  interactiveMode?: 'sync' | 'independent' | 'controller'; // How SVG and video interact
}


const { 
  id,
  url = '', 
  title = '', 
  controls = true, 
  mute = false, 
  loop = false, 
  start = typeof Astro.props.start === 'number' ? Astro.props.start : 0,
  end = 0,
  useCustomPlayer = true,
  autoplay = Astro.props.autoplay !== undefined ? Astro.props.autoplay : (useCustomPlayer ? true : false),
  clickToLoad = true,
  showMuteButton = false, // Only show when explicitly enabled
  overlayImage,
  overlayImageAlt,
  overlaySvg,
  overlaySvgAlt,
  svgatorSync = false,
  svgatorId,
  interactiveMode = 'sync'
} = Astro.props;

// Check if this is a content block video that should preserve settings and skip timer
const isContentBlockVideo = Astro.props['data-preserve-settings'] === 'true';

// Timer is disabled if videoTimeLimitMinutes is -1
const isTimerDisabled = videoTimeLimitMinutes === -1;

function getYouTubeId(url: string) {
  if (!url) return null;
  const regex = /(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/;
  const match = url.match(regex);
  return match ? match[1] : null;
}

const videoId = getYouTubeId(url);
const playerVars: { [key: string]: number | string } = {
  autoplay: autoplay ? 1 : 0,
  controls: controls ? 1 : 0,
  mute: mute ? 1 : 0,
  loop: loop ? 1 : 0,
  start: start,
  end: end > 0 ? end : '',
  playlist: videoId ?? '',
};




---

{clickToLoad ? (
  <div class="iframe-youtube-player click-to-load" id={id} style="position: relative; width: 100%; aspect-ratio: 16/9; background: #000; cursor: pointer;" data-video-id={videoId} data-mute={mute} data-start={start} data-end={end} data-loop={loop}>
    <img 
      src={`https://img.youtube.com/vi/${videoId}/sddefault.jpg`}
      alt={title || 'YouTube Video'}
      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: 1; pointer-events: none;"
      onload="this.style.zIndex = '1'"
      onerror="handleYouTubeEmbedThumbnailError(this)"
    />
    
    <!-- Placeholder for iframe - will be inserted on click -->
    <div class="iframe-container" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 2; display: none; pointer-events: auto;">
    </div>
    
    <!-- Overlay image/SVG wrapper - shown on top of video -->
    <div class="overlay-wrapper" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 65; pointer-events: none; display: none;">
      {overlayImage && (
        <img 
          src={overlayImage}
          alt={overlayImageAlt || 'Video overlay'}
          class="video-overlay-image"
          style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: contain; pointer-events: auto;"
        />
      )}
      {overlaySvg && (
        <object 
          id={svgatorId || `svgator-${videoId}`}
          data={overlaySvg}
          type="image/svg+xml"
          aria-label={overlaySvgAlt || 'Video SVG overlay'}
          class="video-overlay-svg"
          data-svgator-sync={svgatorSync}
          data-interactive-mode={interactiveMode}
          style={`position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: contain; pointer-events: ${interactiveMode ? 'auto' : 'none'};`}
