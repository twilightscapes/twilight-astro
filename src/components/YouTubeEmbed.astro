// Synchronize secondary video player with primary video player
function synchronizeVideoPlayers() {
  const primaryPlayer = document.getElementById('primary-player');
  const secondaryPlayer = document.getElementById('secondary-player');
  
  if (!primaryPlayer || !secondaryPlayer) {
    return; // No synchronized players on this page
  }
  
  console.log('üé• Synchronization: Found primary and secondary player containers');
  
  // Get the iframes by their specific IDs
  let primaryIframe: HTMLIFrameElement | null = null;
  let secondaryIframe: HTMLIFrameElement | null = null;
  
  // Function to find iframes within player containers
  const findIframes = () => {
    primaryIframe = document.getElementById('primary-player-iframe') as HTMLIFrameElement;
    secondaryIframe = document.getElementById('secondary-player-iframe') as HTMLIFrameElement;
    
    if (!primaryIframe) {
      primaryIframe = primaryPlayer.querySelector('iframe');
    }
    if (!secondaryIframe) {
      secondaryIframe = secondaryPlayer.querySelector('iframe');
    }
  };
  
  // Check for iframes every 500ms for up to 10 seconds
  let checkCount = 0;
  const maxChecks = 20;
  
  const checkInterval = setInterval(() => {
    findIframes();
    checkCount++;
    
    if (primaryIframe && secondaryIframe) {
      console.log('üé• Synchronization: Found both iframes, setting up sync');
      clearInterval(checkInterval);
      setupSynchronization(primaryIframe, secondaryIframe);
    } else if (checkCount >= maxChecks) {
      console.warn('üé• Synchronization: Timeout - could not find both iframes');
      clearInterval(checkInterval);
    }
  }, 500);
}

function setupSynchronization(primaryIframe: HTMLIFrameElement, secondaryIframe: HTMLIFrameElement) {
  // State tracking
  let isPrimaryPlaying = false;
  let lastSyncTime = 0;
  
  console.log('üé• Setting up message listener for synchronization');
  
  // Listen for messages from YouTube IFrame API
  const messageHandler = (event: MessageEvent) => {
    if (event.origin !== 'https://www.youtube.com' && event.origin !== 'https://www.youtube-nocookie.com') {
      return;
    }
    
    try {
      const data = typeof event.data === 'string' ? JSON.parse(event.data) : event.data;
      
      // Check if this message is from the primary player
      if (event.source === primaryIframe?.contentWindow) {
        // Check if we're in a loop operation - if so, ignore state changes from loop
        const isLooping = window.videoLoopingStates && window.videoLoopingStates['primary'];
        if (isLooping) {
          console.log('üîÑ Ignoring state change during loop operation');
          return; // Don't process state changes during loop
        }
        
        // YouTube player state changed
        if (data.event === 'infoDelivery' && data.info && 'playerState' in data.info) {
          const state = data.info.playerState;
          console.log('üé• Primary player state:', state, '(1=play, 2=pause, 0=end)');
          
          // Re-check for secondary iframe in case it was dynamically created
          const currentSecondaryIframe = document.getElementById('secondary-player-iframe') as HTMLIFrameElement;
          const targetIframe = currentSecondaryIframe || secondaryIframe;
          
          // 1 = playing, 2 = paused, 0 = ended
          if (state === 1 && !isPrimaryPlaying) {
            // Primary started playing
            console.log('‚ñ∂Ô∏è Primary playing - starting secondary');
            isPrimaryPlaying = true;
            
            // Only seek to start time on first play, not on resume from pause
            if (!hasPlayedOnce) {
              // Get start time from secondary iframe src
              const src = targetIframe?.src || '';
              const startMatch = src.match(/[?&]start=(\d+)/);
              const startTime = startMatch ? parseInt(startMatch[1]) : 0;
              
              // If there's a start time, pause first, then seek, then play
              if (startTime > 0 && targetIframe) {
                targetIframe.contentWindow?.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
                setTimeout(() => {
                  targetIframe.contentWindow?.postMessage(`{"event":"command","func":"seekTo","args":[${startTime}, true]}`, '*');
                  setTimeout(() => {
                    targetIframe.contentWindow?.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
                  }, 100);
                }, 50);
              } else {
                targetIframe?.contentWindow?.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
              }
            } else {
              // Resume from pause - just play without seeking
              targetIframe?.contentWindow?.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
            }
          } else if (state === 2 && isPrimaryPlaying) {
            // Primary paused - pause secondary
            console.log('‚è∏Ô∏è Primary paused - pausing secondary');
            isPrimaryPlaying = false;
            targetIframe?.contentWindow?.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
          } else if (state === 0) {
            // Primary ended - pause secondary (it may loop on its own if loop is enabled)
            console.log('‚èπÔ∏è Primary ended - pausing secondary');
            isPrimaryPlaying = false;
            targetIframe?.contentWindow?.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
          }
        }
        
        // Note: Time position syncing disabled to allow secondary video to play at its own start position
        // If you want videos to play at the same timestamp, uncomment this:
        /*
        // Sync time position periodically during playback
        if (data.event === 'infoDelivery' && data.info && 'currentTime' in data.info) {
          const currentTime = data.info.currentTime;
          const now = Date.now();
          
          // Sync time every 5 seconds to prevent drift
          if (now - lastSyncTime > 5000 && isPrimaryPlaying) {
            lastSyncTime = now;
            console.log('üïê Syncing secondary to time:', currentTime);
            secondaryIframe.contentWindow?.postMessage(
              JSON.stringify({
                event: 'command',
                func: 'seekTo',
                args: [currentTime, true]
              }),
              '*'
            );
          }
        }
        */
      }
    } catch (e) {
      // Ignore parsing errors
    }
  };
  
  window.addEventListener('message', messageHandler);
  
  // Enable listening to player state changes
  console.log('üé• Enabling state change listeners on both players');
  primaryIframe.contentWindow?.postMessage('{"event":"listening","id":"primary"}', '*');
  secondaryIframe.contentWindow?.postMessage('{"event":"listening","id":"secondary"}', '*');
  
  // Also try the YouTube IFrame API ready event
  setTimeout(() => {
    console.log('üé• Sending additional listening events');
    primaryIframe.contentWindow?.postMessage('{"event":"listening"}', '*');
    secondaryIframe.contentWindow?.postMessage('{"event":"listening"}', '*');
  }, 1000);
}

