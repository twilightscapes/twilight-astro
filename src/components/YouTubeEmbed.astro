      )}
    </div>
    
    <!-- Clickable overlay to toggle play/pause when video is playing - above SVG -->
    <div class="video-click-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 68; display: none; cursor: pointer; pointer-events: auto;">
    </div>
    
    <!-- Mute/Pause button - always on top -->
    {showMuteButton && (
      <button 
        class="overlay-mute-toggle"
        data-video-id={videoId}
        style="position: absolute; bottom: 20px; right: 20px; z-index: 75; width: 50px; height: 50px; border-radius: 50%; background: rgba(0, 0, 0, 0.7); border: 2px solid white; cursor: pointer; display: none; align-items: center; justify-content: center; transition: all 0.3s ease;"
        aria-label="Pause video"
      >
        <svg class="mute-icon" width="24" height="24" viewBox="0 0 24 24" fill="white" style="display: block;">
          <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02z"/>
        </svg>
        <svg class="unmute-icon" width="24" height="24" viewBox="0 0 24 24" fill="white" style="display: none;">
          <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
        </svg>
      </button>
    )}
    <!-- Black overlay with title and play button - shows when paused, always above SVG -->
    <div class="video-overlay-screen" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: #000; z-index: 70; display: flex; flex-direction: column; align-items: center; justify-content: center; cursor: pointer; pointer-events: auto;">
      {title && (
        <h2 class="video-overlay-title" style="color: white; font-size: clamp(1.5rem, 4vw, 3rem); text-align: center; margin: 0 1rem 2rem; font-weight: bold; text-shadow: 0 2px 4px rgba(0,0,0,0.5); pointer-events: none;">{title}</h2>
      )}
      <div class="play-button-overlay" style="background: rgba(255,255,255,0.2); border: 3px solid white; border-radius: 50%; width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease; pointer-events: none;">
        <svg class="play-icon" width="32" height="32" viewBox="0 0 24 24" fill="white" style="margin-left: 4px; pointer-events: none; display: block;">
          <path d="M8 5v14l11-7z"/>
        </svg>
        <svg class="pause-icon" width="32" height="32" viewBox="0 0 24 24" fill="white" style="pointer-events: none; display: none;">
          <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
        </svg>
      </div>
    </div>
    
    <!-- Always-visible play/pause button at bottom - above everything -->
    <button 
      class="video-control-button"
      style="position: absolute; bottom: 20px; right: 20px; z-index: 75; width: 50px; height: 50px; border-radius: 50%; background: rgba(0, 0, 0, 0.8); border: 2px solid white; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease; pointer-events: none; opacity: 0;"
      aria-label="Play/Pause video"
    >
      <svg class="play-icon" width="24" height="24" viewBox="0 0 24 24" fill="white" style="margin-left: 2px; display: block;">
        <path d="M8 5v14l11-7z"/>
      </svg>
      <svg class="pause-icon" width="24" height="24" viewBox="0 0 24 24" fill="white" style="display: none;">
        <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
      </svg>
    </button>
    
  </div>
) : (
  <div class="iframe-youtube-player auto-load" id={id} style="position: relative; width: 100%; aspect-ratio: 16/9; background: #000;" data-video-id={videoId}>
    <img 
      src={`https://img.youtube.com/vi/${videoId}/sddefault.jpg`}
      alt={title || 'YouTube Video'}
      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: 1;"
      onload="this.style.zIndex = '0'"
      onerror="handleYouTubeEmbedThumbnailError(this)"
    />
    
    <iframe
      id={id ? `${id}-iframe` : `youtube-iframe-${videoId}`}
      width="100%"
      height="100%"
      src={`https://www.youtube-nocookie.com/embed/${videoId}?autoplay=${(autoplay || mute) ? 1 : 0}&mute=${mute ? 1 : 0}&controls=${controls ? 1 : 0}&enablejsapi=1${start ? `&start=${start}` : ''}${end && end > 0 ? `&end=${end}` : ''}${loop ? `&loop=1&playlist=${videoId}` : ''}&rel=0`}
      title={title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
      referrerpolicy="strict-origin-when-cross-origin"
      loading="lazy"
      style="aspect-ratio: 16/9; position: relative; z-index: 2;"
      onload="this.previousElementSibling.style.display = 'none'"
      data-preserve-settings={Astro.props['data-preserve-settings']}
      data-auto-load="true"
    >
    </iframe>
  </div>
)}


