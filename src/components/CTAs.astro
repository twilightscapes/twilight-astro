---
interface Props {
  title: string;
  description: string;
  ctaUrl: string;
  showFancy?: boolean;
}

const { title, description, ctaUrl, showFancy = false } = Astro.props;
---

{description && <p>{description}</p>}

{title && (
  <button class="button special font mt-4 p-6">
    {showFancy && <div class="fancy"></div>}
    <a href={ctaUrl} class="font no-underline border-none shadow-none" style="color:white; padding:2vh 0">
      <span class="butttext font">{title}</span>
    </a>
  </button>
)}
